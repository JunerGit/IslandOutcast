<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
    <controlDefinition name="options">
        <panel id="optionsPanel" childLayout="vertical" width="40%" height="60%" 
               align="center" valign="center" backgroundColor="#333f">
            <control name="label" text="Options"></control>
            <control name="button" id="closeButton" align="right" label="x" height="30px" width="30px">
                <interact onClick="toggleOptionsMenu()"/>
            </control>
        </panel>
    </controlDefinition>
</nifty-controls>
